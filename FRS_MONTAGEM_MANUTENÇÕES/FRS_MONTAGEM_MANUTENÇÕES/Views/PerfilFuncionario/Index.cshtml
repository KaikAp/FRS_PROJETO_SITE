@model FRS_Montagens_e_Manutenção.Models.Pessoa
<section class="perfil-func_perfil">
    <div>
        <img src="./img/user.svg" alt="Foto do Usuário">
    </div>
    <div>
        <h2 class="perfil-func_perfil_titulo">Olá @Model.Nome</h2>
        <p class="perfil-func_perfil_texto">Email: @Model.Email</p>
    </div>
</section>

<div class="perfil-func_container">
    <div>
        <h4 class="perfil-func_container_titulo">Cadastrar um novo perfil do cliente?</h4>
        <h7 class="perfil-func_container_sub">Seja redirecionado a uma página para o cadastro.</h7>
    </div>
    <a asp-controller="RegistroCliente" class="perfil-func_btn">Cadastrar novo Cliente</a>
</div>

<div class="perfil-func_container">
    <div>
        <h4 class="perfil-func_container_titulo">Cadastrar um novo pedido?</h4>
        <h7 class="perfil-func_container_sub">Seja redirecionado a uma página para o cadastro.</h7>
    </div>
    <a asp-controller="RegistroPedido" class="perfil-func_btn">Cadastrar novo Pedido</a>
</div>

<div class="perfil-func_search-section">
    <h3 class="perfil-func_search-section_titulo">Deseja realizar a consulta de um pedido?</h3>
    <p class="perfil-func_search-section_texto">Informe o CNPJ da empresa em que ele está vinculado: </p>
    <div class="search-bar perfil-func_search-bar">
        <select class="form-control" id="Cliente" asp-items="@ViewBag.Cliente">
            <option></option>
        </select>
        <button type="button" onclick="consultarPedido()">Consultar Pedido</button>
    </div>
</div>
<script>
    function consultarPedido() {
        // Captura o valor selecionado no dropdown (ID do cliente)
        const clienteId = document.getElementById("Cliente").value;

        // Verifica se um cliente foi selecionado
        if (clienteId) {
            // Redireciona para a rota Edit com o ID do cliente selecionado
            window.location.href = `/PerfilFuncionario/ClientePedidos/${clienteId}`;
        } else {
            alert("Por favor, selecione um cliente.");
        }
    }
</script>